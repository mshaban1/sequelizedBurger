<div class="container">
  <div class="row">
    <div class="jumbotron main-banner">
      <h1 class="text-center">Eat da Burger!</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-4 col-md-4 col-lg-4">
      <div class="panel panel-default">
        <div class="panel-heading">DELICIOUS BURGERS</div>
        <div class="panel-body">
          {{#each uneaten}}
          <p>
            {{id}}. {{burger_name}}
              <form action="/{{this.id}}?_method=PUT" method="POST">
                <input type="hidden" name="id" value="{{this.id}}">
                <button type="submit" id="devour" margin="20px" class="btn btn-success">Devour</button>
              </form>
          </p>
          {{/each}}
        </div>
      </div>
    </div>
    <div class="col-sm-4 col-md-4 col-lg-4">
      <div class="panel panel-default">
        <div class="panel-body">
          <form class="form-horizontal" method="POST" action="/" class="button-size">
            <fieldset>
              <legend class="text-center col-xs-12">- Add Burger -</legend>
                <div class="form-group">
                  <div class="col-xs-12">
                    <input type="text" name="foo" class="form-control" >
                  </div>
                </div>
                <div class="form-group">
                  <div class="col-xs-12">
                    <button type="submit" class="btn btn-success btn-block">Create!</button>
                  </div>
                </div>
            </fieldset>
          </form>
        </div>
      </div>
    </div>
    <div class="col-sm-4 col-md-4 col-lg-4">
      <div class="panel panel-default">
        <div class="panel-heading">DEVOURED BURGERS</div>
        <div class="panel-body">
          {{#each eaten}}
          <p>
            {{id}}. {{burger_name}}
              <form action="/{{this.id}}?_method=PUT" method="POST">
              <input type="hidden" name="id" value="{{this.id}}">
              </form>
          </p>
          {{/each}}
        </div>
      </div>
    </div>
  </div>
</div>
